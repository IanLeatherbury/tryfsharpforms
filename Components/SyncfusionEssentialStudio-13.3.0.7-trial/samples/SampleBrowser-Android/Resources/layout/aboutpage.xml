<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent" 
    android:layout_height="wrap_content" tools:context=".MainActivity">
     
    <TextView
        android:layout_width="match_parent" android:text="Essential Studio for Android is a collection of stunning data visualization components that can be used to build line-of-business mobile applications." android:textColor="#000"
        android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="match_parent" android:text="Version 13.3.0.7" android:textSize="16dp"
        android:layout_height="30dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent" android:text="Contact Us" android:textSize="16dp"
        android:layout_height="30dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent" android:text="@string/website" android:textSize="16dp" android:autoLink="web" android:textColor="#059b9b"
        android:layout_height="30dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent" android:text="@string/support" android:textSize="16dp" android:autoLink="web" android:textColor="#059b9b"
        android:layout_height="30dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"/>
         
</LinearLayout>
