<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="tryfsharpforms.CompareMsftHistoricalVolDriftChartPage" xmlns:chart="clr-namespace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms">
	<ContentPage.Content>
		<RelativeLayout x:Name="relativeLayout">
			<chart:SfChart x:Name="Chart">
				<!--Primary Axis-->
				<chart:SfChart.PrimaryAxis>
					<chart:CategoryAxis LabelRotationAngle="-45">
						<chart:CategoryAxis.Title>
							<chart:ChartAxisTitle Text="Date" TextColor="White" />
						</chart:CategoryAxis.Title>
					</chart:CategoryAxis>
				</chart:SfChart.PrimaryAxis>
				<!--Secondary Axis-->
				<chart:SfChart.SecondaryAxis>
					<chart:NumericalAxis>
						<chart:NumericalAxis.Title>
							<chart:ChartAxisTitle Text="Price" TextColor="White" />
						</chart:NumericalAxis.Title>
					</chart:NumericalAxis>
				</chart:SfChart.SecondaryAxis>
				<!--Toggle Legend-->
				<chart:SfChart.Legend>
					<chart:ChartLegend ToggleSeriesVisibility="true">
						<chart:ChartLegend.LabelStyle>
							<chart:ChartLegendLabelStyle TextColor="White" />
						</chart:ChartLegend.LabelStyle>
					</chart:ChartLegend>
				</chart:SfChart.Legend>
				<!--Line Graph, 1st Series-->
				<chart:SfChart.Series>
					<chart:LineSeries StrokeWidth="2" ItemsSource="{Binding MyData1}" Label="Actual" XBindingPath="Date" YBindingPath="Price" x:Name="series1">
					</chart:LineSeries>
					<!--Line Graph 2nd Series-->
					<chart:LineSeries StrokeWidth="2" ItemsSource="{Binding MyData2}" Label="Historical Simulated" XBindingPath="Date" YBindingPath="Price" x:Name="series2">
					</chart:LineSeries>
					<!--End Line Graph-->
				</chart:SfChart.Series>
			</chart:SfChart>
		</RelativeLayout>
	</ContentPage.Content>
</ContentPage>